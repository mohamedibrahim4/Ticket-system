
@model Platform_Task__Management_System.Models.RegisterViewModel
@using Platform_Task__Management_System.Models

@{
    ViewBag.Title = "RegisterAdmin";
}






<!-- register -->
<div class="register">
    <div class="container">
        <h2>Add new Admin </h2>
        <div class="login-form-grids">


            @using (Html.BeginForm("RegisterAdmin", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))

            {

                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Address.Country, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Address.Country, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address.Country)

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Address.City, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Address.City, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address.City)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Address.Street, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Address.Street, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address.Street)

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Address.BuildingNumber, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Address.BuildingNumber, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address.BuildingNumber)


                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.RoleName, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.DropDownList("RoleName", new List<SelectListItem>
                   {

                        new SelectListItem{Text=RoleName.Manager,Value=RoleName.Manager},
                        new SelectListItem{Text=RoleName.TeamLeader,Value=RoleName.TeamLeader},
                        new SelectListItem{Text=RoleName.Programmer,Value=RoleName.Programmer},
                        new SelectListItem{Text=RoleName.Employee,Value=RoleName.Employee},
                        new SelectListItem{Text=RoleName.User,Value=RoleName.User}
                   }, new { @class = "form-control" })


                        @Html.ValidationMessageFor(m => m.RoleName)


                    </div>

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ProgramName, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.ProgramName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ProgramName)


                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.IsActive, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ProgramName)


                    </div>
                </div>




                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-3">
                        <input type="submit" class="btn btn-default" value="Add" />
                    </div>
                </div>
            }

        </div>

    </div>
</div>
<!-- //register -->
