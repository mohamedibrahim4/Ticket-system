@model Platform_Task__Management_System.Models.Task

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>



<form id="AddTask" method="post" enctype="multipart/form-data" autocomplete="off" onsubmit="return AjaxPost(this)">

    <div class="form-horizontal">
        <h4>Task</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TaskName, "Task Name", htmlAttributes: new { @class = "control-label col-md-2" })
