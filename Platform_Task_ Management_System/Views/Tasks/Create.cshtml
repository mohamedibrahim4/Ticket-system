                @Html.EditorFor(model => model.TaskName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TaskName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TaskRequirements, "Task Requirements", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.TaskRequirements, new { style = "max-width:100% !important;", htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TaskRequirements, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DeadLineDate, "DeadLine Date", htmlAttributes: new { @class = "control-label col-md-2" })
